# Dockerfile.ui
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# System deps (streamlit needs some fonts; OCR not necessary here but harmless)
RUN apt-get update && apt-get install -y --no-install-recommends \
    tesseract-ocr \
    poppler-utils \
    libgl1 \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt /app/requirements.txt
RUN pip install -r /app/requirements.txt

COPY . /app

# Streamlit default port
EXPOSE 8501

# Configure Streamlit to bind to all interfaces
ENV STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Healthcheck: Streamlit
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
  CMD python -c "import requests, sys; \
    sys.exit(0 if requests.get('http://127.0.0.1:8501/_stcore/health', timeout=5).status_code==200 else 1)" || exit 1

CMD ["streamlit", "run", "app.py", "--server.port=8501", "--server.address=0.0.0.0"]